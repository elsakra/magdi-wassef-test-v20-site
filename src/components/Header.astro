---
import siteData from '@/data/site.json';
const { navigation, company, branding } = siteData;
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white border-b border-slate-200">
  <!-- Top bar -->
  <div class="bg-primary-900 text-white text-sm py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <a href={`tel:${company.phone}`} class="flex items-center gap-2 hover:text-primary-200 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {company.phone}
        </a>
      </div>
      <div class="hidden sm:flex items-center gap-4">
        <span class="flex items-center gap-1.5">
          <svg class="w-4 h-4 text-teal-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Accepting New Patients
        </span>
      </div>
    </div>
  </div>
  
  <!-- Main nav -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src={branding.logo} alt={company.name} class="h-10 w-auto" />
        <span class="font-display text-xl font-bold text-primary-900 hidden sm:block">
          {company.name}
        </span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        {navigation.items.map((item) => (
          <a 
            href={item.href}
            class:list={[
              "text-sm font-medium transition-colors hover:text-primary-600",
              currentPath === item.href ? "text-primary-600" : "text-slate-700"
            ]}
          >
            {item.label}
          </a>
        ))}
        
        {navigation.ctaButton && (
          <a 
            href={navigation.ctaButton.href}
            class="inline-flex items-center justify-center px-5 py-2.5 bg-primary-600 text-white text-sm font-semibold rounded-lg hover:bg-primary-700 transition-colors shadow-sm"
          >
            {navigation.ctaButton.label}
          </a>
        )}
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        type="button"
        class="md:hidden p-2 text-slate-600 hover:text-primary-600"
        aria-label="Open menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-2 border-t border-slate-200">
        {navigation.items.map((item) => (
          <a 
            href={item.href}
            class:list={[
              "block py-2 text-base font-medium transition-colors hover:text-primary-600",
              currentPath === item.href ? "text-primary-600" : "text-slate-700"
            ]}
          >
            {item.label}
          </a>
        ))}
        
        {navigation.ctaButton && (
          <a 
            href={navigation.ctaButton.href}
            class="block w-full text-center mt-4 px-5 py-3 bg-primary-600 text-white text-base font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            {navigation.ctaButton.label}
          </a>
        )}
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
