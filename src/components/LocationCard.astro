---
interface Props {
  name: string;
  address: string;
  city: string;
  state: string;
  zip: string;
  phone: string;
  image?: string;
  acceptingNewPatients?: boolean;
  href?: string;
}

const { name, address, city, state, zip, phone, image, acceptingNewPatients = true, href } = Astro.props;
---

<div class="bg-white rounded-xl border border-slate-200 overflow-hidden hover:shadow-lg transition-shadow">
  <div class="aspect-[16/9] overflow-hidden">
    {image ? (
      <img 
        src={image} 
        alt={name}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-primary-50 via-slate-50 to-teal-50 flex items-center justify-center">
        <svg class="w-16 h-16 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
    )}
  </div>
  <div class="p-6">
    <div class="flex items-start justify-between gap-4">
      <div>
        <h3 class="font-display text-xl font-bold text-slate-900">
          {name}
        </h3>
        <p class="mt-1 text-slate-600 text-sm">
          {address}<br />
          {city}, {state} {zip}
        </p>
      </div>
      {acceptingNewPatients && (
        <span class="flex-shrink-0 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
          Accepting Patients
        </span>
      )}
    </div>
    
    <div class="mt-4 pt-4 border-t border-slate-100 flex items-center justify-between">
      <a href={`tel:${phone}`} class="text-primary-600 font-medium text-sm hover:text-primary-700">
        {phone}
      </a>
      {href && (
        <a href={href} class="text-primary-600 font-medium text-sm hover:text-primary-700 flex items-center gap-1">
          View Details
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
