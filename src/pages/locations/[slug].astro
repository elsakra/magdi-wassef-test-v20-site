---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const locations = await getCollection('locations');
  return locations.map((location) => ({
    params: { slug: location.slug },
    props: { location },
  }));
}

const { location } = Astro.props;
const { Content } = await location.render();
---

<BaseLayout title={location.data.name}>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-2 text-sm text-slate-500 mb-4">
        <a href="/locations" class="hover:text-primary-600">Locations</a>
        <span>/</span>
        <span class="text-slate-900">{location.data.name}</span>
      </div>
      
      <div class="flex items-start justify-between flex-wrap gap-4">
        <div>
          <h1 class="font-display text-3xl sm:text-4xl font-bold text-slate-900">
            {location.data.name}
          </h1>
          <p class="mt-2 text-lg text-slate-600">
            {location.data.address}<br />
            {location.data.city}, {location.data.state} {location.data.zip}
          </p>
        </div>
        {location.data.acceptingNewPatients && (
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-teal-100 text-teal-800">
            <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Accepting New Patients
          </span>
        )}
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          {location.data.image && (
            <div class="aspect-[16/9] rounded-xl overflow-hidden mb-8">
              <img 
                src={location.data.image} 
                alt={location.data.name}
                class="w-full h-full object-cover"
              />
            </div>
          )}
          
          <div class="prose prose-slate max-w-none">
            <Content />
          </div>
          
          {location.data.services && location.data.services.length > 0 && (
            <div class="mt-8">
              <h2 class="font-display text-xl font-bold text-slate-900 mb-4">
                Services Available
              </h2>
              <div class="flex flex-wrap gap-2">
                {location.data.services.map((service) => (
                  <span class="px-4 py-2 bg-slate-100 rounded-lg text-slate-700 text-sm font-medium">
                    {service}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
        
        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-slate-50 rounded-xl p-6 sticky top-24">
            <h3 class="font-display text-lg font-bold text-slate-900 mb-4">
              Contact This Location
            </h3>
            
            <div class="space-y-4">
              <a href={`tel:${location.data.phone}`} class="flex items-center gap-3 text-slate-700 hover:text-primary-600">
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                {location.data.phone}
              </a>
              
              {location.data.fax && (
                <div class="flex items-center gap-3 text-slate-700">
                  <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
                  </svg>
                  Fax: {location.data.fax}
                </div>
              )}
              
              {location.data.email && (
                <a href={`mailto:${location.data.email}`} class="flex items-center gap-3 text-slate-700 hover:text-primary-600">
                  <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  {location.data.email}
                </a>
              )}
            </div>
            
            {location.data.hours && (
              <div class="mt-6 pt-6 border-t border-slate-200">
                <h4 class="font-semibold text-slate-900 mb-3">Hours</h4>
                <div class="space-y-2 text-sm">
                  {location.data.hours.monday && <p class="flex justify-between"><span class="text-slate-600">Monday</span> <span class="text-slate-900">{location.data.hours.monday}</span></p>}
                  {location.data.hours.tuesday && <p class="flex justify-between"><span class="text-slate-600">Tuesday</span> <span class="text-slate-900">{location.data.hours.tuesday}</span></p>}
                  {location.data.hours.wednesday && <p class="flex justify-between"><span class="text-slate-600">Wednesday</span> <span class="text-slate-900">{location.data.hours.wednesday}</span></p>}
                  {location.data.hours.thursday && <p class="flex justify-between"><span class="text-slate-600">Thursday</span> <span class="text-slate-900">{location.data.hours.thursday}</span></p>}
                  {location.data.hours.friday && <p class="flex justify-between"><span class="text-slate-600">Friday</span> <span class="text-slate-900">{location.data.hours.friday}</span></p>}
                  {location.data.hours.saturday && <p class="flex justify-between"><span class="text-slate-600">Saturday</span> <span class="text-slate-900">{location.data.hours.saturday}</span></p>}
                  {location.data.hours.sunday && <p class="flex justify-between"><span class="text-slate-600">Sunday</span> <span class="text-slate-900">{location.data.hours.sunday}</span></p>}
                </div>
              </div>
            )}
            
            <div class="mt-6">
              <Button href="/contact" style="primary" class="w-full">
                Book Appointment
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
