---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import LocationCard from '@/components/LocationCard.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const testimonials = await getCollection('testimonials');
const locations = await getCollection('locations');

const { hero, sections, company } = siteData;
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 3);
const featuredTestimonials = testimonials.filter(t => t.data.featured).slice(0, 2);
const sortedLocations = locations.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 3);
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900 overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-teal-400 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary-400 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="max-w-2xl">
          <!-- Trust badges -->
          {hero.trustBadges && (
            <div class="flex flex-wrap gap-3 mb-8">
              {hero.trustBadges.map((badge) => (
                <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-white/10 backdrop-blur-sm text-white text-sm rounded-full">
                  <svg class="w-4 h-4 text-teal-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {badge}
                </span>
              ))}
            </div>
          )}
          
          <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-white tracking-tight leading-tight">
            {hero.headline}
          </h1>
          {hero.subheadline && (
            <p class="mt-6 text-xl text-primary-100 leading-relaxed">
              {hero.subheadline}
            </p>
          )}
          <div class="mt-10 flex flex-wrap gap-4">
            <Button href={hero.cta.href} style="white" size="lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              {hero.cta.label}
            </Button>
            {hero.secondaryCta && (
              <Button href={hero.secondaryCta.href} style="outline" size="lg" class="border-white/30 text-white hover:bg-white/10">
                {hero.secondaryCta.label}
              </Button>
            )}
          </div>
        </div>
        
        {hero.backgroundImage && (
          <div class="hidden lg:block relative">
            <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl ring-1 ring-white/10">
              <img 
                src={hero.backgroundImage} 
                alt={company.name}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Social Proof Stats -->
  {siteData.socialProof?.stats && (
    <section class="bg-slate-50 py-12 border-b border-slate-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {siteData.socialProof.stats.map((stat) => (
            <div class="text-center">
              <p class="font-display text-3xl sm:text-4xl font-bold text-primary-600">
                {stat.value}
              </p>
              <p class="mt-1 text-slate-600 text-sm">
                {stat.label}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Services Section - Only show if services exist -->
  {sortedServices.length > 0 && (
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.services?.headline || "Our Services"} 
          description={sections.services?.description}
        />
        
        <div class="mt-16 grid md:grid-cols-3 gap-8">
          {sortedServices.map((service) => (
            <div class="group bg-slate-50 rounded-xl p-8 hover:bg-white hover:shadow-xl hover:shadow-slate-200/50 transition-all border border-transparent hover:border-slate-200">
              <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors">
                <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <h3 class="font-display text-xl font-bold text-slate-900 mb-3">
                {service.data.title}
              </h3>
              <p class="text-slate-600 text-sm leading-relaxed mb-6">
                {service.data.shortDescription}
              </p>
              <a href={`/services`} class="inline-flex items-center text-primary-600 font-medium text-sm hover:text-primary-700">
                Learn More
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          ))}
        </div>
        
        <div class="mt-12 text-center">
          <Button href="/services" style="outline">
            View All Services
          </Button>
        </div>
      </div>
    </section>
  )}

  <!-- Locations Section -->
  {sortedLocations.length > 0 && (
    <section class="py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.locations?.headline || "Find a Location"} 
          description={sections.locations?.description}
        />
        
        <div class="mt-16 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedLocations.map((location) => (
            <LocationCard
              name={location.data.name}
              address={location.data.address}
              city={location.data.city}
              state={location.data.state}
              zip={location.data.zip}
              phone={location.data.phone}
              image={location.data.image}
              acceptingNewPatients={location.data.acceptingNewPatients}
              href={`/locations/${location.slug}`}
            />
          ))}
        </div>
        
        <div class="mt-12 text-center">
          <Button href="/locations" style="primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            View All Locations
          </Button>
        </div>
      </div>
    </section>
  )}

  <!-- Insurance Section -->
  {sections.insurance && (
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.insurance.headline} 
          description={sections.insurance.description}
        />
        
        <div class="mt-12 flex flex-wrap justify-center gap-4">
          {sections.insurance.plans?.map((plan) => (
            <div class="px-6 py-3 bg-slate-100 rounded-lg text-slate-700 font-medium text-sm">
              {plan}
            </div>
          ))}
        </div>
        
        <p class="mt-8 text-center text-slate-500 text-sm">
          Don't see your insurance? <a href="/contact" class="text-primary-600 hover:underline">Contact us</a> to check if we accept your plan.
        </p>
      </div>
    </section>
  )}

  <!-- Testimonials Section -->
  {featuredTestimonials.length > 0 && (
    <section class="py-24 bg-primary-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.testimonials?.headline || "What Patients Say"} 
          description={sections.testimonials?.description}
        />
        
        <div class="mt-16 grid md:grid-cols-2 gap-8">
          {featuredTestimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-sm">
              <!-- Rating -->
              {testimonial.data.rating && (
                <div class="flex gap-1 mb-4">
                  {Array.from({ length: 5 }).map((_, i) => (
                    <svg 
                      class:list={[
                        "w-5 h-5",
                        i < testimonial.data.rating ? "text-yellow-400" : "text-slate-200"
                      ]}
                      fill="currentColor" 
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
              )}
              
              <blockquote class="text-slate-700 leading-relaxed">
                "{testimonial.body}"
              </blockquote>
              
              <div class="mt-6">
                <p class="font-semibold text-slate-900">{testimonial.data.author}</p>
                {testimonial.data.location && (
                  <p class="text-sm text-slate-500">{testimonial.data.location}</p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  {sections.cta && (
    <section class="py-24 bg-primary-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
          {sections.cta.headline}
        </h2>
        {sections.cta.description && (
          <p class="mt-6 text-xl text-primary-200">
            {sections.cta.description}
          </p>
        )}
        <div class="mt-10 flex flex-wrap justify-center gap-4">
          <Button href={sections.cta.cta.href} style="white" size="lg">
            {sections.cta.cta.label}
          </Button>
          {sections.cta.secondaryCta && (
            <Button href={sections.cta.secondaryCta.href} style="outline" size="lg" class="border-white/30 text-white hover:bg-white/10">
              {sections.cta.secondaryCta.label}
            </Button>
          )}
        </div>
      </div>
    </section>
  )}
</BaseLayout>
